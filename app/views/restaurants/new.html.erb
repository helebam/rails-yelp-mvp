<div class="container">

  <h1>Add A Restaurant</h1>

  <%= simple_form_for @restaurant do |f| %>
    <%= f.input :name %>
    <%= f.input :address %>
    <%= f.input :phone_number%>
    <%= f.input :category, collection: Restaurant::CATEGORY, as: :radio_buttons %>
    <%= f.submit class: "btn" %>
  <% end %>

</div>
