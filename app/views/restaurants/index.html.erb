<div class="container">
<h1>Restaurants:</h1>

<div class="card-restaurants">
<ul>
<% @restaurants.each do |restaurant| %>
  <h2>Name: <%= link_to restaurant.name, restaurant_path(restaurant) %></h2>
          <p>Address: <%= restaurant.address %></p>
          <p> Phone: <%= restaurant.phone_number %></p>
          <p>Category: <%= restaurant.category %></p>
<% end %>
</ul>
</div>
</div>
